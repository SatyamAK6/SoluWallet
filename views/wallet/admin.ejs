<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <div class="row">
                <div class="col-md-12 m-4">
                    <main class="col-md-6">
                        <label>Welcome, <b>
                                Admin
                            </b></label>
                        <br />
                        <label>Your Address is <b>
                                <%- Address %>
                            </b></label>
                        <br />
                        <label>Your Balance is <b>
                                <%- Balance %>
                            </b> SLT.</label>
                    </main>
                    <main class="col-md-12">
                        <h4>Transaction List</h4>
                        <div class="row">
                            <div class="col-md-12">
                                <% if(Txs.length > 0) { %>
                                <table class="table table-responsive table-stripped">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Tx Hash</th>
                                            <th>Sender</th>
                                            <th>Receiver</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% Txs.forEach(function(Tx){ %> 
                                        <tr>
                                            <td><%=Tx.txHash %></td>
                                            <td><%=Tx.senderAddress %></td>
                                            <td><%=Tx.receiverAddress %></td>
                                            <td><%=Tx.amount %></td>
                                        </tr>
                                        <% }) %> 
                                    </tbody>
                                </table>
                                <% } else { %> 
                                    <h5> No records found!!!</h5>
                                    <% } %> 
                            </div>
                        </div>
                    </main>
                </div>
            </div>
                <%- include('../includes/end.ejs') %>