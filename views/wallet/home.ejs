<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <div class="row">
            <div class="col-md-12 m-4">
                <main class="col-md-6">
                    <label>Welcome, <b> <%- email %></b></label>
                    <br/>
                    <label>Your Address is <b><%- Address %></b></label>
                    <br />
                    <label>Your Balance is <b>
                            <%- Balance %>
                        </b> SLT.</label>
                </main>
                <main class="col-md-4">
                    <h4>Send Token to Your Friend</h4>
                    <form action="/sendToken" method="POST">
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input  type="text" class="form-control" name="address"
                                id="address" value="">
                        </div>
                        <div class="form-group">

                            <label for="amount">Amount(in SLT)</label>
                            <input type="number" class="form-control" name="amount" id="amount" value="">
                        </div>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn btn-info" type="submit">Send</button>
                    </form>
                </main>
                <main class="col-md-12">
                    <h4>Transaction List</h4>
                    <div class="row">
                        <div class="col-md-12">
                            <% if(Txs.length> 0) { %>
                                <table class="table table-responsive table-stripped">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Tx Hash</th>
                                            <th>Sender</th>
                                            <th>Receiver</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% Txs.forEach(function(Tx){ %>
                                            <% var className = ''; %> 
                                            <%  if(Tx.senderAddress == Address){
                                                className = 'bg-danger';
                                            } else {
                                                className = 'bg-success';
                                            } %> 
                                            <tr class="<%= className %> ">
                                                <td>
                                                    <%=Tx.txHash %>
                                                </td>
                                                <td>
                                                    <%=Tx.senderAddress %>
                                                </td>
                                                <td>
                                                    <%=Tx.receiverAddress %>
                                                </td>
                                                <td>
                                                    <%=Tx.amount %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h5> No records found!!!</h5>
                                    <% } %>
                        </div>
                    </div>
                </main>
            </div>
        </div>
            <%- include('../includes/end.ejs') %>